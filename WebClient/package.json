{
  "name": "web-client",
  "version": "0.1.0",
  "engines": {
    "node": "16.x"
  },
  "proxy": "https://localhost:7009",
  "private": true,
  "dependencies": {
    "@chakra-ui/icons": "^1.1.1",
    "@chakra-ui/react": "^1.7.3",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@microsoft/signalr": "^6.0.1",
    "formik": "^2.2.9",
    "framer-motion": "^5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "6",
    "react-scripts": "5.0.0",
    "restful-react": "^15.9.4",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier -c \"src/**/*.{ts,tsx}\"",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --fix --max-warnings=0",
    "openapi-generate": "restful-react import --output src/api/hooks.tsx --file ./openapi/specification.json"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "eslint": "^8.22.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-jest": "^26.8.3",
    "prettier": "^2.5.1",
    "typescript": "^4.7"
  }
}
